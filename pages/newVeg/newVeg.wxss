/* pages/newVeg/newVeg.wxss */
.newBox {
  width:100%;
  height:100%;
  background-color: #fff;
}
.newInput {
  height:calc(100% - 103px);
  width:85%;
  margin:0 auto;
  box-sizing: border-box;
  padding-top:50px;
  overflow-y: scroll;
}
.inL {
  display:flex;
  margin-bottom:20px;
}
.title {
  flex:2;
  text-align: right;
  padding-right:10px;
  box-sizing: border-box;
  margin-top:5px;
}
.flexI {
  flex:5;
  position:relative;
}
.input {
  width:100%;
  height:30px;
  border-radius: 30px;
  border:1px solid #bfbfbf;
  box-sizing: border-box;
  padding:0 20px 0 10px;
}
.add {
  width:100px;
  height:100px;
  border:1px solid #bcbcbc;
  margin-left:10px;
  border-radius: 8px;
  text-align: center;
  line-height:90px;
  color:#cacaca;
  font-size:60px;
  float:left;
}
.img-v {
  width:100%;
  margin:0;
}
.img {
  width:100px;
  height:100px;
  position:relative;
  float:left;
  margin-bottom:10px;
  margin-left:10px;
}
.delete-btn {
  position:absolute;
  right:0;
  top:0;
  width:20px;
  height:20px;
  background-color:rgba(0,0,0,.5);
  font-size:12px;
  line-height:20px;
  text-align: center;
  color:white;
  border-radius: 100%;
}
.img image {
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
}
.btn {
  width:85%;
  margin:0 auto;
  height:35px;
  line-height:35px;
  text-align: center;
  font-size:16px;
  color:white;
  background: #ff7200;
  border-radius:40px;
}
/* 底部 */
 .footer {
  width:90%;
  margin-left:5%;
  display: flex;
  position:absolute;
  bottom:25px;
} 
.fooL {
 flex:1;
 border-bottom:1px solid #f9d5b7;
}
.logoName {
  color:#f9d5b7;
  letter-spacing: 2px;
  font-size:18px;
  margin:0 15px;
  position:relative;
  bottom:-10px;
}
.fooR {
  flex:1;
  border-bottom:1px solid #f9d5b7;
}