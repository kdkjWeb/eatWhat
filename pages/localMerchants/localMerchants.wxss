/* pages/localMerchants/localMerchants.wxss */
.indexBox {
  height:100%;
  width:100%;
  background-color: #ffffff;
}

/* 列表 */
.list {
  height:calc(100% - 105px);
  overflow: hidden;
}
.group {
  padding:5px 15px;
  border-bottom:1px solid #bfbfbf;
  display:flex;
}
.group:first-child {
  border-top:1px solid #bfbfbf;
}
.groupImg {
  width:60px;
  height:60px;
  border-radius: 10px;
}
.groupImg image {
  width:100%;
  height:100%;
  border-radius:10px;
}
.groupName {
  flex: 1;
  padding:8px 0 8px 15px; 
}
.groupName view:nth-of-type(1){
  font-size:16px;
  margin-bottom:5px;
}
.groupName view:nth-of-type(2){
  font-size:14px;
  color:#a2a2a2;
}
.groupName view:nth-of-type(1) text {
  float:right;
  font-size:14px;
  color:#a2a2a2;
}

/* 底部 */
 .footer {
  width:90%;
  margin-left:5%;
  display: flex;
  position:absolute;
  bottom:25px;
} 
.fooL {
 flex:1;
 border-bottom:1px solid #f9d5b7;
}
.logoName {
  color:#f9d5b7;
  letter-spacing: 2px;
  font-size:18px;
  margin:0 15px;
  position:relative;
  bottom:-10px;
}
.fooR {
  flex:1;
  border-bottom:1px solid #f9d5b7;
}


