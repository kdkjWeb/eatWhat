/* pages/localBook/localBook.wxss */
.bookBox {
  padding:0 15px;
  height:calc(100% - 53px);
  background-color: #fff;
}
.groupName {
  padding:15px 0;
  font-size:15px;
  border-bottom:1px solid #bfbfbf;
}
.groupDetail {
  padding:15px 0;
  font-size:15px;
  display: flex;
  align-items:center;
}
.groupDetail .balance{
  text-align: left;
  flex:1;
}
.groupDetail .unit {
  flex:1;
  text-align: center;
}
.groupDetail .account {
  flex: 1;
  position:relative;
}
.groupDetail .account button {
  border:none;
  background-color:#ff7200;
  width:80px;
  height:30px;
  line-height:30px;
  border-radius: 30px;
  color:white;
  font-size:12px;
  vertical-align: middle;
  float: right;
  position:relative;
   z-index:9;  
}
.select {
  position:absolute;
  right:0;
  top:0;
  width:80px;
  border-radius: 17px 17px 10px 10px;
  padding-top:30px;
  background-color:#ef8e3f;
  z-index:8; 
}
.select view {
  text-align: center;
  color:white;
  font-size:13px;
  padding:5px 0;
  border-bottom:1px solid #fff;
}
.select view:nth-of-type(2){
  border-bottom:none;
}
.table {
  width:100%;
  height:calc(100% - 215px);
  margin:0 auto;
  font-size:12px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
  background: white;
  border:1px solid #bbb;
  border-top:none;
  box-sizing: border-box;
}
.tr:nth-of-type(even) {
  background-color: #f7f7f7;
}
.th {
  justify-content: center;
  color: #fff;
  display: flex;
  height: 40px;
  align-items: center;
  border-left:1px solid #bbb;
}
.td {
  justify-content: center;
  color: #333;
  display: flex;
  height: 40px;
  align-items: center;
  border-left:1px solid #ddd;
}
.table .bg-w{
  background: #8e8e8e;
  border-radius: 5px 5px 0 0;
}

.th:nth-of-type(1),.td:nth-of-type(1) {
  flex:3;
}
.th:nth-of-type(2),.td:nth-of-type(2) {
  flex:3;
  width:70px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.th:nth-of-type(3),.td:nth-of-type(3) {
  flex:2;
}
.td:nth-of-type(3){
  font-size:9px;
}
.th:nth-of-type(4),.td:nth-of-type(4) {
  flex:2;
}
.th:nth-of-type(5),.td:nth-of-type(5) {
  flex:2;
}
.th:nth-of-type(6),.td:nth-of-type(6) {
  flex:3;
}
.th:first-child {
  border:none;
}
.td:first-child {
  border-left: none;
}
.td .img {
  width:70%;
  padding-bottom:50%;
  margin:10px 0;
  position:relative;
}
.td .img image {
  width:100%;
  height:100%;
  border-radius: 4px;
  position:absolute;
  top:0;
  left:0;
}
.tbody {
   height:calc(100% - 50px); 
   overflow: hidden;  
}

/* 底部 */
 .footer {
  width:90%;
  margin-left:5%;
  display: flex;
  position:absolute;
  bottom:25px;
} 
.fooL {
 flex:1;
 border-bottom:1px solid #f9d5b7;
}
.logoName {
  color:#f9d5b7;
  letter-spacing: 2px;
  font-size:18px;
  margin:0 15px;
  position:relative;
  bottom:-10px;
}
.fooR {
  flex:1;
  border-bottom:1px solid #f9d5b7;
}