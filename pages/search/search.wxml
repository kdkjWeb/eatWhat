<!--pages/search/search.wxml-->
<view class="indexBox">
<!-- 搜索框 -->
  <view class="search">
    <view class="searchBox">
      <icon class="iconfont icon-sousuo"></icon>
      <input placeholder='搜索群名称/群主名称/群ID' 
      bindfocus='search'></input>
    </view>
  </view>
<scroll-view scroll-y class="list">
  <block wx:for="[1,2,3,4]" wx:key="index">
      <view class="group">
        <view class="groupImg">
          <image src='../../static/indexB.png'></image>
        </view>
        <view class="groupName">
          <view>群名称</view>
          <view>群主：发抖的小猫咪 <text bindtap='addGroup' data-id="{{index}}">+</text> </view>
        </view>
      </view>
  </block>
</scroll-view>
</view>
<view class="footer">
  <view class="fooL"></view>
  <view class='logoName'>吃什么</view>
  <view class="fooR"></view>
</view>
 <layer 
inputList="{{inputList}}" 
title="加入群"
modalShow="{{modalShow}}" 
catch:myeventBox="myeventBox"></layer> 
