} */
.info view{
  margin-top: 5px;
}
.userList{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  background: #f9f9f9;
  margin: 15px 0 15px;
  padding: 10px 0;
}
.userList view{
  min-width: 33%;
  flex: 1;
  text-align: center;
}
.vote_btn{
  width: 100px;
  height: 35px;
  line-height: 35px;
  text-align: center;
  background-color: #ff7101;
  color: #fff;
  border-radius: 18px;
  margin: 0 auto 15px;
}
.noVote {
  background-color: #666;
}
.vote_btn text{
  position: relative;
  left: 5px;
  font-size: 12px;
}


/* 拼餐成功模块 */
.success{
  width: 90%;
  margin: 15px auto;
  border: 2px solid #fe7201;
  font-size: 13px;
}
.success_d{
  width: 85%;
  margin: 0 auto;
}
.btn{
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  margin-bottom: 15px;
}
.btn view{
  width: 35%;
  text-align: center;
  height: 35px;
  line-height: 35px;
  border-radius: 20px;
}
.success_btn{
  background-color: #ff7101;
  color: #fff;
}
.canel_btn{
  background-color: #fff;
  border: 1px solid #fe7201;
  color: #fe7201;
}

