/* pages/group/group.wxss */
.groupBox {
  height:calc(100% - 102px)
}
.info{
  position: relative;
  width: 75%;
  /* margin: 10px auto 0; */
  margin-top: 10px;
  margin-left: 20%;
  border: 1px solid #fe7201;
  background-color: #fff5ec;
  font-size: 13px;
}
.infoImg{
  position: absolute;
  left: -25%;
  width: 20%;
  padding-bottom: 20%;
  display: block;
  border-radius: 50%;
}
.infoImg image {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  border-radius: 100%;
}
.info::after{
  position: absolute;
  left: -10px;
  top: 15px;
  content: "";
  width: 0; 
  height: 0; 
  border-top: 5px solid transparent; 
  border-right: 10px solid #fe7201; 
  border-bottom: 5px solid transparent; 
}

.detailed{
  padding: 0px 7px 0px;
}
.info .name{
  text-align: center;
  margin-bottom: 7px;
}
/* .info .public{
  display: flex;
