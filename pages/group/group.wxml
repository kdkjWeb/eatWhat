<!--pages/group/group.wxml-->

<!-- 引入头部组件 -->
<header></header>

<!-- 详细模块 -->
<scroll-view scroll-y class="groupBox">
<view class='info info1'>
  <view class='detailed'>
    <view class='name'>{{groupName}}</view>
  <view>目标店铺：<text>{{businessName}}</text></view>
  <view class='public'>
    <view>出发时间：<text>{{startTime}}</text></view>
    <view>截止时间：<text>{{endTime}}</text></view>
  </view>
  <view class='public'>
    <view><text decode="{{true}}" space="{{true}}">合&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;计：</text><text>{{all}}元</text></view>
    <view><text decode="{{true}}" space="{{true}}">人&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;均：</text><text>{{average}}元</text></view>
  </view>
  </view>
  <!-- 显示投票成功后的名字 -->
  <view class='userList'>
      <view wx:for="{{userList}}" wx:key="index">
        {{item.name}}
      </view>
  </view>
  <!-- 投票按钮 -->
  <view class='vote_btn' bindtap='vote'>投票<text>{{num}}</text></view>
</view>

<!-- 拼餐成功模块 -->
<view class='success info'>
    <view class='success_d detailed'>
    <view class='name'>{{groupName}}</view>
  <view>目标店铺：{{businessName}}</view>
  <view class='public'>
    <view>出发时间：{{startTime}}</view>
    <view>截止时间：{{endTime}}</view>
  </view>
  <view class='public'>
    <view><text decode="{{true}}" space="{{true}}">合&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;计：</text><input type='text' class='time' value='{{all}}'/>元</view>
    <view><text decode="{{true}}" space="{{true}}">人&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;均：</text>{{average}}元</view>
  </view>
  </view>
  <!-- 显示投票成功后的名字 -->
  <view class='userList'>
      <view wx:for="{{userList}}" wx:key="index">
        <!-- <input type='text' value='{{item.name}}'/> -->
        {{item.name}}:
        <input class='amount' type='text' value='{{average}}'/>元
      </view>
  </view>
  <!-- 确定取消按钮 -->
  <view class='btn'>
    <view class='success_btn' bindtap='success'>确定</view>
    <view class='canel_btn' bindtap='canel'>修改</view>
  </view>
</view>
</scroll-view>

 <view class="footer">
  <view class="fooL"></view>
  <view class='logoName'>吃什么</view>
  <view class="fooR"></view>
</view> 

 <layer 
inputList="{{inputList}}" 
title="提示"
modalShow="{{modalShow}}" 
catch:myeventBox="myeventBox"></layer> 